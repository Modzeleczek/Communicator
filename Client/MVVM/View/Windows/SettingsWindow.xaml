<windows:DialogWindow
  x:Class="Client.MVVM.View.Windows.SettingsWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:Client.MVVM.View.Converters"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:windows="clr-namespace:Client.MVVM.View.Windows"
  Title="{Binding Converter={x:Static c:Strings.Instance}, ConverterParameter='DuoChat - settings'}"
  Width="500"
  Height="300"
  MinWidth="300"
  MinHeight="100"
  AllowsTransparency="True"
  Background="Transparent"
  FontFamily="/MVVM/View/Fonts/RedHatDisplay"
  Icon="/MVVM/View/Icons/logo.png"
  MouseLeftButtonDown="Window_MouseLeftButtonDown"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterOwner"
  WindowStyle="None"
  mc:Ignorable="d">
    <Border
      Background="#3b3e54"
      BorderBrush="#9A8C98"
      BorderThickness="1"
      CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
              Grid.Row="0"
              Background="#22223B"
              CornerRadius="10,10,0,0">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                      Margin="15,0,0,0"
                      Content="{Binding Converter={x:Static c:Strings.Instance}, ConverterParameter='DuoChat - settings'}"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Foreground="#9A8C98" />
                    <StackPanel
                      Grid.Column="1"
                      HorizontalAlignment="Right"
                      Orientation="Horizontal">

                        <Button
                          Width="25"
                          Height="25"
                          Margin="4,1,16,0"
                          BorderThickness="0"
                          Click="Button_Close_Click"
                          Content="✕"
                          FontSize="15"
                          FontWeight="Bold"
                          Foreground="#9A8C98"
                          Style="{StaticResource TitleBarButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                  Grid.Row="0"
                  Margin="0,-1,0,0"
                  BorderBrush="#9A8C98"
                  BorderThickness="0,2,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                          Grid.Column="0"
                          Margin="5,5,5,5"
                          VerticalAlignment="Center"
                          Content="{Binding Converter={x:Static c:Strings.Instance}, ConverterParameter='Nickname'}"
                          FontFamily="/MVVM/View/Fonts/RedHatDisplay"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="#C9ADA7" />
                        <Border
                          Grid.Column="1"
                          MinWidth="100"
                          MaxWidth="300"
                          Margin="5,5,10,5"
                          HorizontalAlignment="Right"
                          BorderBrush="#9A8C98"
                          BorderThickness="1"
                          CornerRadius="10">
                            <TextBox
                              MinWidth="200"
                              MaxWidth="300"
                              Margin="3,0,3,0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Background="Transparent"
                              BorderThickness="0"
                              CaretBrush="White"
                              FontFamily="/MVVM/View/Fonts/RedHatDisplay"
                              FontSize="16"
                              Foreground="White"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled" />
                        </Border>
                    </Grid>
                </Border>
                <Border
                  Grid.Row="1"
                  Margin="0,-1,0,0"
                  BorderBrush="#9A8C98"
                  BorderThickness="0,1,0,1">
                    <Label
                      Margin="5,5,5,5"
                      VerticalAlignment="Center"
                      Content="{Binding Converter={x:Static c:Strings.Instance}, ConverterParameter='Dark theme'}"
                      FontFamily="/MVVM/View/Fonts/RedHatDisplay"
                      FontSize="18"
                      FontWeight="SemiBold"
                      Foreground="#C9ADA7" />
                </Border>
                <Border
                  Grid.Row="2"
                  Margin="0,-1,0,0"
                  BorderBrush="#9A8C98"
                  BorderThickness="0,1,0,1">
                    <Button
                      Margin="10,6,5,6"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Background="Transparent"
                      BorderThickness="0"
                      Command="{Binding LocalLogout}"
                      Content="{Binding Converter={x:Static c:Strings.Instance}, ConverterParameter='Log local user out'}"
                      FontFamily="/MVVM/View/Fonts/RedHatDisplay"
                      FontSize="18"
                      FontWeight="SemiBold"
                      Foreground="#C9ADA7"
                      Style="{StaticResource MenuButtonStyle}" />
                </Border>
            </Grid>

            <Button
              Grid.Row="2"
              Margin="200,10,200,10"
              Background="Transparent"
              BorderBrush="Transparent"
              Content="Save"
              FontFamily="/MVVM/View/Fonts/RedHatDisplay"
              FontSize="18"
              FontWeight="SemiBold"
              Foreground="#C9ADA7"
              Style="{StaticResource CornerRadiusButton}" />
        </Grid>
    </Border>
</windows:DialogWindow>