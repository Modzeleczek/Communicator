<Window x:Class="Client.MVVM.View.Windows.FormWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
  xmlns:c="clr-namespace:Client.MVVM.View.Converters"
  mc:Ignorable="d"
  Height="auto" Width="auto"
  x:Name="FormWindowName">
  <i:Interaction.Triggers>
    <i:EventTrigger EventName="Loaded">
      <i:InvokeCommandAction Command="{Binding Path=WindowLoaded}"
        CommandParameter="{Binding ElementName=OkCancelFormWindowName}"/>
    </i:EventTrigger>
  </i:Interaction.Triggers>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <StackPanel x:Name="FieldsStackPanel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>

    <Button Grid.Column="0" Grid.Row="2"
      Content="{Binding Converter={x:Static c:Strings.Instance},
        ConverterParameter='Cancel'}"
      Command="{Binding Path=Cancel}"
      Style="{StaticResource TransparentStyle}"/>
    <Button x:Name="ConfirmationButton" Grid.Column="1" Grid.Row="2"
        Command="{Binding Path=Confirm}"
      Style="{StaticResource TransparentStyle}"/>
  </Grid>
</Window>
