<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--  Background Colors  -->
  <SolidColorBrush x:Key="FirstBackgroundColor" Color="#F2E9E4" />
  <SolidColorBrush x:Key="SecondBackgroundColor" Color="#C9ADA7" />
  <SolidColorBrush x:Key="ThirdBackgroundColor" Color="#9A8C98" />

  <!--  Foreground Colors  -->
  <SolidColorBrush x:Key="FirstForegroundColor" Color="#22223B" />
  <SolidColorBrush x:Key="SecondForegroundColor" Color="#22223B" />
  <SolidColorBrush x:Key="ThirdForegroundColor" Color="#22223B" />

  <!--  Border Colors  -->
  <SolidColorBrush x:Key="FirstBorderColor" Color="#22223B" />
  <SolidColorBrush x:Key="SecondBorderColor" Color="#3B3E54" />

  <Style x:Key="OptionImage" TargetType="Image">
    <Setter Property="Source" Value="/MVVM/View/Icons/settings_light.png" />
  </Style>

</ResourceDictionary>