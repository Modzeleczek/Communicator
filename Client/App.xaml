<shared:ThemedApplication
  x:Class="Client.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ctrl="clr-namespace:Client.MVVM.View.Controls"
  xmlns:vm="clr-namespace:Client.MVVM.ViewModel"
  xmlns:shared="clr-namespace:Shared">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Słownik z dynamicznymi zasobami. Resources.MergedDictionaries[0] -->
        <ResourceDictionary>
          <!-- Podmienialny zasób z definicjami kolorów. -->
          <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/MVVM/View/DynamicResources/Themes/Dark.xaml" />
          </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <!-- Statyczne zasoby stylów. -->
        <!-- Wspólne klienta i serwera -->
        <ResourceDictionary Source="/MVVM/View/Resources/Dynamic/Styles/Buttons.xaml" />
        <ResourceDictionary Source="/MVVM/View/Resources/Dynamic/Styles/HoverPanel.xaml" />
        <ResourceDictionary Source="/MVVM/View/Resources/Dynamic/Styles/TextFields.xaml" />

        <!-- Indywidualne klienta -->
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/Buttons.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ToggleButtons.xaml" />
        <!-- ServerCard musi być po Shared/Buttons, bo go używa. -->
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ServerCard.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ConversationCard.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/AccountCard.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ChatItem.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/MessageBox.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ScrollBar.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/ResizableWindow.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/TextFields.xaml" />
        <ResourceDictionary Source="/MVVM/View/DynamicResources/Styles/Border.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <DataTemplate DataType="{x:Type vm:ConversationViewModel}">
        <ctrl:ConversationView />
      </DataTemplate>
    </ResourceDictionary>
  </Application.Resources>
</shared:ThemedApplication>
