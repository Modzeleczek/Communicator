<ctrl:ListViewControl x:Class="Server.MVVM.View.Controls.ConnectedClientsView"
  x:ClassModifier="public"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:l="clr-namespace:Shared.MVVM.View.Localization"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:ctrl="clr-namespace:Server.MVVM.View.Controls"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <ListView
      Background="Transparent"
      BorderBrush="Green"
      BorderThickness="0,0,0,4"
      ItemContainerStyle="{StaticResource ClientListItem}"
      ItemsSource="{Binding Clients}"
      SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
      SelectionChanged="ListView_SelectionChanged"/>
  </Grid>
</ctrl:ListViewControl>
